<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.kh.em.desl">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.textinput.TextInputActivity"
            android:label="@string/title_activity_text_input"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.tabs.TabActivity"
            android:label="@string/title_activity_tabs" />
        <activity
            android:name=".ui.tabs.TabExtraActivity"
            android:label="@string/title_activity_tabs_extra" />
        <activity
            android:name=".ui.snackbar.SnackBarActivity"
            android:label="@string/title_activity_snackbar" />
        <activity
            android:name=".ui.navview.NavActivity"
            android:label="@string/title_activity_nav" />
        <activity android:name=".ui.collaps.CollapsActivity" />
        <activity android:name=".ui.collaps.CollapsFabActivity" />
        <activity
            android:name=".ui.bottomsheet.BottomSheetActivity"
            android:label="@string/title_activity_bottom_sheet" />
        <activity
            android:name=".ui.bottomnav.BottomNavActivity"
            android:label="@string/title_activity_bnav"/>
        <activity
            android:name=".ui.bottomnav.BottomNavExtraActivity"
            android:label="@string/title_activity_bnav_extra"/>
    </application>

</manifest>